<% provide(:title, '注册') %>
<h2>注册</h2>

<div class="row">
  <div class="span5 offset3">
    <%= form_for(@user) do |f| %>
      
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name, "笔名" %>
      <%= f.text_field :name %>

      <%= f.label :email, "邮箱" %>
      <%= f.text_field :email %>

      <%= f.label :password, "密码" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "确认密码" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "创建帐号", class: "btn btn-large btn-success" %>
    <% end %>
  </div>
</div>